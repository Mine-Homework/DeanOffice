<Window x:Class="DeanOffice1.FacultiesEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeanOffice1"
        mc:Ignorable="d"
        Title="FacultiesEditor" Height="250" Width="400">
    <Grid>
        <UniformGrid>
            <StackPanel>
                <Label Content="Название факультета" FontSize="27" Height="49" Margin="60,20,52,20"></Label>
                <TextBox x:Name="Name" FontSize="20" Margin="10,0,10,2" Height="40"></TextBox>
                <Button x:Name="Action"  Content="Действие" Padding="10" Margin="10,30,10, 20" Click="Action_Click"/>
            </StackPanel>
        </UniformGrid>
    </Grid>
</Window>
